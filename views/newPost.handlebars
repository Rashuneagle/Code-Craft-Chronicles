<section id="newPost">
  <section class="card">
    <div class="card-body">
      <form id="newPostForm">
        <div class="form-group mb-2">
          <label class="form-label" for="postTitle">Title</label><br>
          <input class="form-control" type="text" id="postTitle" placeholder="Enter post title">
        </div>
        <div class="form-group mb-2">
          <label class="form-label" for="postContent">Content</label><br>
          <textarea class="form-control" type="text" id="postContent" placeholder="Enter post content"></textarea>
        </div>
        <div class="form-group mb-2">
          <label class="form-label" for="postImage">Image</label><br>
          <input class="form-control" type="file" id="postImage" accept="image/*" />
        </div>
        <button class="btn btn-dark" type="submit">Create</button>
      </form>
    </div>
  </section>
</section>
<script src="/js/newPost.js"></script>
